// Number of RGB LEDs in strand:
int nLEDs = 48;

// Chose 2 pins for output; can be any valid output pins:
int dataPin  = 2;
int clockPin = 3;

IPAddress ip(192, 236, 74, 77);


char ssid[] = "2400 Nueces Wireless";     // the name of your network
int status = WL_IDLE_STATUS;     // the Wifi radio's status
// First parameter is the number of LEDs in the strand.  The LED strips
// are 32 LEDs per meter but you can extend or cut the strip.  Next two
// parameters are SPI data and clock pins:
LPD8806 strip = LPD8806(nLEDs, dataPin, clockPin);

void setup() {
  //Initialize serial and wait for port to open:
  Serial.begin(9600);
  while (!Serial) {
    ; // wait for serial port to connect. Needed for native USB port only
  }

  // check for the presence of the shield:
  if (WiFi.status() == WL_NO_SHIELD) {
    Serial.println("WiFi shield not present");
    // don't continue:
    while (true);
  }

  WiFi.config(ip);

  // attempt to connect to Wifi network:
  while ( status != WL_CONNECTED) {
    Serial.print("Attempting to connect to open SSID: ");
    Serial.println(ssid);
    status = WiFi.begin(ssid);

    // wait 10 seconds for connection:
    delay(10000);
  }

  // you're connected now, so print out the data:
  Serial.print("You're connected to the network");
  printCurrentNet();
  printWifiData();

  #if defined(__AVR_ATtiny85__) && (F_CPU == 16000000L)
    clock_prescale_set(clock_div_1); // Enable 16 MHz on Trinket
#endif

  // Start up the LED strip
  strip.begin();

  // Update the strip, to start they are all 'off'
  strip.show();
}

void loop() {
  // check the network connection once every 10 seconds:
  //delay(10000);
  printCurrentNet();
  // Send a simple pixel chase in...
  colorChase(strip.Color(127, 127, 127), 50); // White
  printCurrentNet();
  colorChase(strip.Color(127,   0,   0), 50); // Red
  printCurrentNet();
  colorChase(strip.Color(127, 127,   0), 50); // Yellow
  printCurrentNet();
  colorChase(strip.Color(  0, 127,   0), 50); // Green
  printCurrentNet();
  colorChase(strip.Color(  0, 127, 127), 50); // Cyan
  printCurrentNet();
  colorChase(strip.Color(  0,   0, 127), 50); // Blue
  printCurrentNet();
  colorChase(strip.Color(127,   0, 127), 50); // Violet
  printCurrentNet();
  // Send a theater pixel chase in...
  theaterChase(strip.Color(127, 127, 127), 50); // White
  printCurrentNet();
  theaterChase(strip.Color(127,   0,   0), 50); // Red
  printCurrentNet();
  theaterChase(strip.Color(127, 127,   0), 50); // Yellow
  printCurrentNet();
  theaterChase(strip.Color(  0, 127,   0), 50); // Green
  printCurrentNet();
  theaterChase(strip.Color(  0, 127, 127), 50); // Cyan
  printCurrentNet();
  theaterChase(strip.Color(  0,   0, 127), 50); // Blue
  printCurrentNet();
  theaterChase(strip.Color(127,   0, 127), 50); // Violet
  printCurrentNet();

  // Fill the entire strip with...
  colorWipe(strip.Color(127,   0,   0), 50);  // Red
  printCurrentNet();
  colorWipe(strip.Color(  0, 127,   0), 50);  // Green
  printCurrentNet();
  colorWipe(strip.Color(  0,   0, 127), 50);  // Blue
  printCurrentNet();

  rainbow(10);
  printCurrentNet();
  rainbowCycle(0);  // make it go through the cycle fairly fast
  printCurrentNet();
  theaterChaseRainbow(50);
}

void printWifiData() {
  // print your WiFi shield's IP address:
  IPAddress ip = WiFi.localIP();
  Serial.print("IP Address: ");
  Serial.println(ip);
  Serial.println(ip);

  // print your MAC address:
  byte mac[6];
  WiFi.macAddress(mac);
  Serial.print("MAC address: ");
  Serial.print(mac[5], HEX);
  Serial.print(":");
  Serial.print(mac[4], HEX);
  Serial.print(":");
  Serial.print(mac[3], HEX);
  Serial.print(":");
  Serial.print(mac[2], HEX);
  Serial.print(":");
  Serial.print(mac[1], HEX);
  Serial.print(":");
  Serial.println(mac[0], HEX);

  // print your subnet mask:
  IPAddress subnet = WiFi.subnetMask();
  Serial.print("NetMask: ");
  Serial.println(subnet);

  // print your gateway address:
  IPAddress gateway = WiFi.gatewayIP();
  Serial.print("Gateway: ");
  Serial.println(gateway);
}

void printCurrentNet() {
  // print the SSID of the network you're attached to:
  Serial.print("SSID: ");
  Serial.println(WiFi.SSID());

  // print the MAC address of the router you're attached to:
  byte bssid[6];
  WiFi.BSSID(bssid);
  Serial.print("BSSID: ");
  Serial.print(bssid[5], HEX);
  Serial.print(":");
  Serial.print(bssid[4], HEX);
  Serial.print(":");
  Serial.print(bssid[3], HEX);
  Serial.print(":");
  Serial.print(bssid[2], HEX);
  Serial.print(":");
  Serial.print(bssid[1], HEX);
  Serial.print(":");
  Serial.println(bssid[0], HEX);

  // print the received signal strength:
  long rssi = WiFi.RSSI();
  Serial.print("signal strength (RSSI):");
  Serial.println(rssi);

  // print the encryption type:
  byte encryption = WiFi.encryptionType();
  Serial.print("Encryption Type:");
  Serial.println(encryption, HEX);
}




